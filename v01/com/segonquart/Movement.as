package com.segonquart{	import flash.display.*;	import flash.events.*;	import flash.net.*;	import flash.filters.*;	import flash.filters.GlowFilter;	import flash.filters.BitmapFilterQuality;	import flash.filters.BlurFilter;	public class Movement extends MovieClip	{		private var glowIn:GlowFilter;		private var glowOut:GlowFilter;		public function Movement ()		{				glowIn = new GlowFilter(0x27CCC2,.8,15,15,4,2);			glowOut = new GlowFilter(0x27CCC2,0,15,15,4,2);			arcade_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			arcade_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			oGuitar_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			oGuitar_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			oConcert_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			oConcert_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			pDebbide_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			pDebbide_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			bg2.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			bg2.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			bg1.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			bg1.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			pEmiglio_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			pEmiglio_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			pFemale_mc.addEventListener (MouseEvent.MOUSE_OVER, onOverPoster);			pFemale_mc.addEventListener (MouseEvent.MOUSE_OUT, onOutPoster);			addEventListener (Event.ENTER_FRAME, flickerIt);		}		private function onOverPoster (m:MouseEvent):void		{			m.currentTarget.buttonMode = true;			m.currentTarget.useHandCursor = true;			m.currentTarget.mouseChildren = false;			Tweener.addTween (m.currentTarget, {_filter:glowIn, time:1});		}		private function onOutPoster (m:MouseEvent):void		{			m.currentTarget.buttonMode = false;			Tweener.addTween (m.currentTarget, {_filter:glowOut, time:1});		}		private function flickerIt (evt:Event):void		{			var filters:Array = sign_mc.filters;			var glow:GlowFilter = filters[2];			glow.strength = Math.random() * .6 + .35;			sign_mc.filters = filters;		}		private function loadSwf (swf:String)		{			var loader:Loader = new Loader();			var request:URLRequest = new URLRequest(swf);			loader.contentLoaderInfo.addEventListener (Event.COMPLETE, loadComplete);			loader.load (request);		}				private function loadComplete (e:Event)		{			addChild (e.currentTarget.content);			e.currentTarget.content.x = 0;			e.currentTarget.content.y = 30;		}	}}
package com.segonquart{	import flash.display.Sprite;	import flash.display.MovieClip;	import flash.text.TextField;	import flash.text.TextFieldType;	import flash.events.*;	import flash.text.TextFormat;	import flash.text.TextFieldAutoSize;	import flash.display.Shape;	//shadow	import flash.filters.BitmapFilter;	import flash.filters.BitmapFilterQuality;	import flash.filters.DropShadowFilter;		public class Tooltip2 extends MovieClip	{		private var child:Shape;		private var tipNM_mc:MovieClip;		private var tFormat:TextFormat;		private var textNM_txt:TextField;		private var hex:Number;		private var hex2:Number;				function Tooltip2 (hexIn:Number,hexIn2:Number)		{			hex = hexIn;			hex2 = hexIn2;			tipNM_mc = new MovieClip();			textNM_txt=new TextField();			textNM_txt.name = "NM";			child= new Shape();			textNM_txt.width = 100;			textNM_txt.height = 30;			textNM_txt.selectable = false;			tipNM_mc.addChild (child);			tipNM_mc.addChild (textNM_txt);			tFormat_tf = new TextFormat_tf();			tFormat_tf.font = "Arial";			tFormat_tf.size = 11;			tFormat_tf.align = "center";			textNM_txt.defaultTextFormat_tf = tFormat_tf;			textNM_txt.autoSize = TextFieldAutoSize.LEFT;			addChild (tipNM_mc);		}		public function showTip (argNM:String)		{			trace ("showTip");			textNM_txt.text = argNM;			child.graphics.beginFill (hex);			child.graphics.lineStyle (1, hex2, 100);			child.graphics.moveTo (0, 0);			child.graphics.lineTo (textNM_txt.textWidth+5, 0);			child.graphics.lineTo (textNM_txt.textWidth+5, 20);			child.graphics.lineTo (20, 20);			child.graphics.lineTo (15, 30);			child.graphics.lineTo (10, 20);			child.graphics.lineTo (0, 20);			child.graphics.lineTo (0, 0);			child.graphics.endFill ();			tipNM_mc.x = tipNM_mc.stageX - 15;			tipNM_mc.y = tipNM_mc.stageY - 35;			tipNM_mc.visible = true;				}		public function removeTip ()		{			tipNM_mc.visible = false;		}		public function addShadow ()		{			var filter:BitmapFilter = getBitmapFilter();			var myFilters:Array = new Array();			myFilters.push (filter);			filters = myFilters;		}		private function getBitmapFilter ():BitmapFilter		{			var color:Number = 0x000000;			var angle:Number = 45;			var alpha:Number = 0.8;			var blurX:Number = 3;			var blurY:Number = 3;			var distance:Number = 5;			var strength:Number = 0.65;			var inner:Boolean = false;			var knockout:Boolean = false;			var quality:Number = BitmapFilterQuality.HIGH;			return new DropShadowFilter(distance,			                                        angle,			                                        color,			                                        alpha,			                                        blurX,			                                        blurY,			                                        strength,			                                        quality,			                                        inner,			                                        knockout);		}	}}
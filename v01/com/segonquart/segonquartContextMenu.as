package com.segonquart{	import flash.display.Sprite;	import flash.ui.ContextMenu;	import flash.ui.ContextMenuItem;	import flash.events.ContextMenuEvent;	import flash.net.navigateToURL;	import flash.net.URLRequest;	public class segonquartContextMenu extends Sprite	{		private var credit:String = "© Segonquart Studio";		private var copyright:String = "© Segonquart Studio";		private var url:String = "http://www.segonquart.net";		private var cm:ContextMenu;		public function segonquartContextMenu ()		{			cm = new ContextMenu();			cm.hideBuiltInItems ();			var cmi:ContextMenuItem = new ContextMenuItem(credit);			var cmi2:ContextMenuItem = new ContextMenuItem(copyright);			cmi.addEventListener (ContextMenuEvent.MENU_ITEM_SELECT, segonquartWeb);			credit.separatorBefore = false;			cm.customItems.push (copyright, credit);			this.contextMenu = cm;		}		private function segonquartWeb (e:ContextMenuEvent):void		{			var req:URLRequest = new URLRequest(url);			navigateToURL (req, '_blank');		}	}}